import java.util.HashMap;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Create Scanner object to take user input
        Scanner scanner = new Scanner(System.in);

        // Ask the user to enter a string
        System.out.println("Enter a string:");
        String inputString = scanner.nextLine();

        // Call method to count and display character frequencies
        CharacterCount(inputString);

        // Close the scanner (good practice)
        scanner.close();
    }

    // Method to count occurrences of each character
    static void CharacterCount(String inputString) {
        // HashMap to store character-frequency pairs
        HashMap<Character, Integer> charCountMap = new HashMap<>();

        // Convert the string to a character array
        char[] strArray = inputString.toCharArray();

        // Loop through each character
        for (char c : strArray) {
            // Ignore spaces
            if (c == ' ') continue;

            // Update count in the map
            if (charCountMap.containsKey(c)) {
                charCountMap.put(c, charCountMap.get(c) + 1);
            } else {
                charCountMap.put(c, 1);
            }
        }

        // Print results
        System.out.println("Character counts in the given string:");
        for (char key : charCountMap.keySet()) {
            System.out.println(key + " : " + charCountMap.get(key));
        }
    }
}
Enter a string:
Character counts in the given string:
a : 4
e : 2
h : 2
i : 2
j : 1
n : 2
o : 1
p : 1
r : 1
s : 2
t : 2
v : 1
y : 1

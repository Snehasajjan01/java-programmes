import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Create Scanner object to take input from user
        Scanner sc = new Scanner(System.in);

        // Ask user for input
        System.out.println("Enter the String:");
        String s = sc.nextLine();

        int count = 1; // assume at least one word

        // Loop through the string to count spaces between words
        for (int i = 0; i < s.length() - 1; i++) {
            // If current character is space and next character is not space
            if (s.charAt(i) == ' ' && s.charAt(i + 1) != ' ') {
                count++;
            }
        }

        // Display result
        System.out.println("Number of words in the string: " + count);

        // Close scanner (good practice)
        sc.close();
    }
}
Enter the String:Hey how are you?
Number of words in the string: 4
